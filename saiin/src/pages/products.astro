---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="NayaraPaints">
  <!--===== HERO AREA STARTS =======-->
  <div class="vl-hero2-area aboutus_hero parallaxie" style="background-image:url(/assets/img/hero/hero-hm2-bg.webp)">
    <div class="container">
      <div class="row">
        <div class="col-xl-6">
          <div class="aboutus_hero_title">
            <h1 class="tufel_breadcumb_title">Texture Finishes by Nayara Paints</h1>
            <div class="space26"></div>
            <p style="color: white; font-size: 18px;">Explore our interior, exterior, and decorative wall texture
              solutions.</p>
            <div class="space26"></div>
            <ul>
              <li><a href="/">Home</a></li>
              <li><img src="/assets/img/about/aboutuss-inr-hero-icon.svg" alt=""></li>
              <li><a class="aboutus_titlefix" href="/products/">Products</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!--===== HERO AREA ENDS =======-->


  <!--===== BRAND AREA START =======-->
  <section class="tp-text-slider tp-text-bg-2 fix"
      style="background-image:url(/assets/img/hero/hero2text-slide-bg.png)">
      <div class="test tp-text-slider-rotate">
          <div class="swiper tpcauses-text-slider-active">
              <div class="swiper-wrapper tp-slide-transtion">
                  <div class="swiper-slide">
                      <div class="tp-text-slide">
                          <h2 class="tp-text-slide-title"><img src="/assets/img/hero/hero2-brand-star.svg" alt="">
                              Interior Texture
                          </h2>
                      </div>
                  </div>
                  <div class="swiper-slide">
                      <div class="tp-text-slide">
                          <h2 class="tp-text-slide-title"><img src="/assets/img/hero/hero2-brand-star.svg" alt="">
                              Exterior Texture
                          </h2>
                      </div>
                  </div>
                  <div class="swiper-slide">
                      <div class="tp-text-slide">
                          <h2 class="tp-text-slide-title"><img src="/assets/img/hero/hero2-brand-star.svg" alt="">
                              Decorative Finishes
                          </h2>
                      </div>
                  </div>
                  <div class="swiper-slide">
                      <div class="tp-text-slide">
                          <h2 class="tp-text-slide-title"><img src="/assets/img/hero/hero2-brand-star.svg" alt=""> 
                              Designer Texture
                          </h2>
                      </div>
                  </div>
                  <div class="swiper-slide">
                      <div class="tp-text-slide">
                          <h2 class="tp-text-slide-title"><img src="/assets/img/hero/hero2-brand-star.svg" alt="">
                              Waterproof Texture</h2>
                      </div>
                  </div>
              </div>
          </div>

      </div>
  </section>
  <!--===== BRAND AREA END =======-->

  <!--===== PRODUCTS GRID AREA START =======-->
  <div class="vl-product-area sp1">
      <div class="container">
          <div class="row">
              <!-- Product 1: Interior Wall Texture -->
              <div class="col-lg-4 col-md-6 mb-30">
                  <div class="product-item"
                      style="border: 1px solid #eee; border-radius: 8px; overflow: hidden; height: 100%;">
                      <div class="product-img">
                          <img src="/assets/img/gallery/gallary_inner_img1.png" alt="Interior Wall Texture"
                              class="img-fluid w-100" style="height: 250px; object-fit: cover;">
                      </div>
                      <div class="product-content" style="padding: 25px;">
                          <h3><a href="/interior-wall-texture/"
                                  style="color: #000; font-size: 24px; font-weight: 600;">Interior Wall Texture</a></h3>
                          <div class="space10"></div>
                          <p>Premium quality, durable textures for beautiful home interiors.</p>
                          <div class="space20"></div>
                          <a href="/interior-wall-texture/" class="vl-btn1">View Details <i
                                  class="fa-solid fa-arrow-right"></i></a>
                      </div>
                  </div>
              </div>

              <!-- Product 2: Exterior Wall Texture -->
              <div class="col-lg-4 col-md-6 mb-30">
                  <div class="product-item"
                      style="border: 1px solid #eee; border-radius: 8px; overflow: hidden; height: 100%;">
                      <div class="product-img">
                          <img src="/assets/img/gallery/gallary_inner_img2.png" alt="Exterior Wall Texture"
                              class="img-fluid w-100" style="height: 250px; object-fit: cover;">
                      </div>
                      <div class="product-content" style="padding: 25px;">
                          <h3><a href="/exterior-wall-texture/"
                                  style="color: #000; font-size: 24px; font-weight: 600;">Exterior Wall Texture</a></h3>
                          <div class="space10"></div>
                          <p>Weather-proof, long-lasting exterior textures for ultimate protection.</p>
                          <div class="space20"></div>
                          <a href="/exterior-wall-texture/" class="vl-btn1">View Details <i
                                  class="fa-solid fa-arrow-right"></i></a>
                      </div>
                  </div>
              </div>

              <!-- Product 3: Decorative Texture Finishes -->
              <div class="col-lg-4 col-md-6 mb-30">
                  <div class="product-item"
                      style="border: 1px solid #eee; border-radius: 8px; overflow: hidden; height: 100%;">
                      <div class="product-img">
                          <img src="/assets/img/gallery/gallary_inner_img5.png" alt="Decorative Texture Finishes"
                              class="img-fluid w-100" style="height: 250px; object-fit: cover;">
                      </div>
                      <div class="product-content" style="padding: 25px;">
                          <h3><a href="/decorative-texture-finishes/"
                                  style="color: #000; font-size: 24px; font-weight: 600;">Decorative Finishes</a></h3>
                          <div class="space10"></div>
                          <p>Artistic wall finishes that add character and elegance to any space.</p>
                          <div class="space20"></div>
                          <a href="/decorative-texture-finishes/" class="vl-btn1">View Details <i
                                  class="fa-solid fa-arrow-right"></i></a>
                      </div>
                  </div>
              </div>

              <!-- Product 4: Designer Wall Texture -->
              <div class="col-lg-4 col-md-6 mb-30">
                  <div class="product-item"
                      style="border: 1px solid #eee; border-radius: 8px; overflow: hidden; height: 100%;">
                      <div class="product-img">
                          <img src="/assets/img/gallery/gallary_inner_img1.png" alt="Designer Wall Texture"
                              class="img-fluid w-100" style="height: 250px; object-fit: cover;">
                      </div>
                      <div class="product-content" style="padding: 25px;">
                          <h3><a href="/designer-wall-texture/" style="color: #000; font-size: 24px; font-weight: 600;">Designer Texture</a></h3>
                          <div class="space10"></div>
                          <p>Exclusive designer textures for modern and stylish homes.</p>
                          <div class="space20"></div>
                          <a href="/designer-wall-texture/" class="vl-btn1">View Details <i
                                  class="fa-solid fa-arrow-right"></i></a>
                      </div>
                  </div>
              </div>

              <!-- Product 5: Waterproof Texture Coatings -->
              <div class="col-lg-4 col-md-6 mb-30">
                  <div class="product-item"
                      style="border: 1px solid #eee; border-radius: 8px; overflow: hidden; height: 100%;">
                      <div class="product-img">
                          <img src="/assets/img/gallery/gallary_inner_img3.png" alt="Waterproof Texture Coatings" class="img-fluid w-100"
                              style="height: 250px; object-fit: cover;">
                      </div>
                      <div class="product-content" style="padding: 25px;">
                          <h3><a href="/waterproof-texture-coatings/"
                                  style="color: #000; font-size: 24px; font-weight: 600;">Waterproof Texture</a></h3>
                          <div class="space10"></div>
                          <p>High-performance waterproof textures for maximum protection.</p>
                          <div class="space20"></div>
                          <a href="/waterproof-texture-coatings/" class="vl-btn1">View Details <i
                                  class="fa-solid fa-arrow-right"></i></a>
                      </div>
                  </div>
              </div>

          </div>
      </div>
  </div>
  <!--===== PRODUCTS GRID AREA END =======-->

  <!--===== CTA AREA START =======-->
  <div class="vl-cta2-area sp4 parallaxie" style="background-image:url(/assets/img/cta/cta2-banner-bg.png)">
      <div class="container">
          <div class="row">
              <div class="vl-cta2-area-info">
                  <div class="vl-cta2-area-info-content text-center" style="width: 100%;">
                      <h3>Need help choosing the right paint for your project?</h3>
                      <div class="space16"></div>
                  </div>
                  <div class="vl-cta2-area-from-section text-center"
                      style="width: 100%; justify-content: center; display: flex;">
                      <div class="btn_area1">
                          <a href="tel:+917383097777" class="vl-btn1"> Call Nayara Paints +91 7383097777 <i
                                  class="fa-solid fa-arrow-right"></i></a>
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </div>
  <!--===== CTA AREA ENDS =======-->
</BaseLayout>
