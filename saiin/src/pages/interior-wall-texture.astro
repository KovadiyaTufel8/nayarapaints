---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="NayaraPaints">
  <!--===== HERO AREA STARTS =======-->
  <div class="vl-hero2-area aboutus_hero parallaxie" style="background-image:url(/assets/img/hero/hero-hm2-bg.webp)">
    <div class="container">
      <div class="row">
        <div class="col-xl-6">
          <div class="aboutus_hero_title">
            <h1 class="tufel_breadcumb_title">Interior Wall Texture by Nayara Paints</h1>
            <div class="space26"></div>
            <p style="color: white; font-size: 18px;">Create stunning focal points with our premium interior texture series.</p>
            <div class="space26"></div>
            <ul>
              <li><a href="/">Home</a></li>
              <li><img src="/assets/img/about/aboutuss-inr-hero-icon.svg" alt=""></li>
              <li><a href="/products/">Products</a></li>
              <li><img src="/assets/img/about/aboutuss-inr-hero-icon.svg" alt=""></li>
              <li><a class="aboutus_titlefix" href="/interior-wall-texture/">Interior Texture</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!--===== HERO AREA ENDS =======-->


  <!--===== PRODUCT DETAILS START =======-->
  <div class="vl-service-details-area sp1">
    <div class="container">
      <div class="row">
        <div class="col-lg-6 mb-30">
          <div class="service-details-img">
            <img src="/assets/img/gallery/gallary_inner_img1.png" alt="Interior Wall Texture" class="img-fluid w-100"
              style="border-radius: 8px;">
          </div>
        </div>
        <div class="col-lg-6">
          <div class="service-details-content">
            <h2>Premium Interior Textures</h2>
            <div class="space20"></div>
            <p>Nayara Paints Interior Wall Textures add depth, dimension, and elegance to your living spaces. Unlike flat paint, our textures hide minor wall imperfections while providing a unique, artistic finish that transforms ordinary walls into masterpieces.</p>

            <div class="space20"></div>
            <h3>Where to Use</h3>
            <ul class="check-list" style="list-style: none; padding: 0;">
              <li style="margin-bottom: 10px;"><i class="fa-solid fa-check"
                  style="color: #FF5E14; margin-right: 10px;"></i> Living Room Feature Walls</li>
              <li style="margin-bottom: 10px;"><i class="fa-solid fa-check"
                  style="color: #FF5E14; margin-right: 10px;"></i> Office Reception Areas</li>
              <li style="margin-bottom: 10px;"><i class="fa-solid fa-check"
                  style="color: #FF5E14; margin-right: 10px;"></i> Showrooms & Boutiques</li>
            </ul>

            <div class="space20"></div>
            <h3>Why Choose Our Textures?</h3>
            <ul class="check-list" style="list-style: none; padding: 0;">
              <li style="margin-bottom: 10px;"><i class="fa-solid fa-check"
                  style="color: #FF5E14; margin-right: 10px;"></i> <strong>Hides Imperfections:</strong>
                Covers undulations and hairline cracks.</li>
              <li style="margin-bottom: 10px;"><i class="fa-solid fa-check"
                  style="color: #FF5E14; margin-right: 10px;"></i> <strong>Durable Finish:</strong> Thick,
                protective layer that lasts for years.</li>
              <li style="margin-bottom: 10px;"><i class="fa-solid fa-check"
                  style="color: #FF5E14; margin-right: 10px;"></i> <strong>Washable:</strong> Easy to
                maintain and clean.</li>
              <li><i class="fa-solid fa-check" style="color: #FF5E14; margin-right: 10px;"></i>
                <strong>Aesthetic Appeal:</strong> Offers a rich, tactile experience.
              </li>
            </ul>

            <div class="space30"></div>
            <a href="tel:+917383097777" class="vl-btn1">Contact Nayara Paints for Quote <i
                class="fa-solid fa-arrow-right"></i></a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!--===== PRODUCT DETAILS END =======-->

  <!--===== CTA AREA START =======-->
  <div class="vl-cta2-area sp4 parallaxie" style="background-image:url(/assets/img/cta/cta2-banner-bg.png)">
    <div class="container">
      <div class="row">
        <div class="vl-cta2-area-info">
          <div class="vl-cta2-area-info-content text-center" style="width: 100%;">
            <h3>Ready to transform your walls?</h3>
            <div class="space16"></div>
          </div>
          <div class="vl-cta2-area-from-section text-center"
            style="width: 100%; justify-content: center; display: flex;">
            <div class="btn_area1">
              <a href="tel:+917383097777" class="vl-btn1"> Call Nayara Paints +91 7383097777 <i
                  class="fa-solid fa-arrow-right"></i></a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!--===== CTA AREA ENDS =======-->
</BaseLayout>
